<div class="card-wrapper">
</div>
<form action="{$action}" method="post" class="hvcc-form">
    <div class="">
        <br>

        <div class="form-group row">
            <div class="col-md-12">
                <input type="tel" id="c-number" name="C_Number" class="form-control" placeholder="Card number">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-6">
                <input type="tel" id="c-date" name="C_Date" class="form-control" placeholder="MM/YY">
            </div>
            <div class="col-md-6">
                <input type="text" id="c-cvv" name="C_Cvv" class="form-control" placeholder="CVC">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <input type="tel" id="c-name" name="C_Name" class="form-control" placeholder="Name on card" required>
            </div>
        </div>
        <p></p>
    </div>

</form>